//LINK:-https://www.codechef.com/submit/DIFFCONSEC

#include <iostream>
using namespace std;

int main() {
	// your code goes here
	int t;
	cin>>t;
	int n;
	string s;
	int count=0;
	while(t--)
	{
	    cin>>n;
	    cin >>s;  
	    
	    for(int i=0;i<s.length()-1;i++)
	    {
	        if(s[i]==s[i+1])
	        {
	            count ++;
	        }
	    }
	    cout<<count<<endl;
	    count=0;
	    s.clear();
	    
	}
	return 0;
}
